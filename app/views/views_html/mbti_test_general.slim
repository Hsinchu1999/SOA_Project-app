doctype html
html
  head 
    title MBTI test general page 
    

  body
    .title_container 
      h3 The MBTI Test
      h3 Question number 
      h3 =current_question
    
    .mbti_question_box 
      .mbti_question 
        p =question.question
      .mbti_answer 
        form role="form" action='/mbti_test/submit_answer' method='POST'
          input type='checkbox' id='A' value='A'
          label for='A' #{question.answerA}
          br
          input type='checkbox' id='B' value='B'
          label for='B' #{question.answerB}
          br
          input type='submit' value='Next'
        form role="form" action="/mbti_test/previous_page" method='Post'
          input type="submit" value="Previous"

